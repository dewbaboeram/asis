                @Html.ImageActionLink((string)AsisModelHelper.GetViewBagLabel(ViewBag, "Delete", "05"), "Delete", "asis_attmain", new { id = item.IDAttMain }, null, "~/Content/DSupportWebApp/asset/img/delete.gif") |

            </td>
